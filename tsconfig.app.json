{
  "compilerOptions": {
    "target": "esnext",                    // Modern JavaScript features
    "module": "esnext",                    // For React apps
    "lib": ["dom", "dom.iterable", "esnext"], // Browser + latest JS support
    "allowSyntheticDefaultImports": true,  // Allow default imports
    "esModuleInterop": true,               // CommonJS compatibility
    "jsx": "react-jsx",                    // Enables React's JSX transform
    "moduleResolution": "node",            // Node-style imports
    "resolveJsonModule": true,             // Import JSON files if needed
    "skipLibCheck": true,                  // Ignore library type checks
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "strict": true                         // Enable strict type checking
  },
  "include": ["src"],                      // Include only the src folder
  "exclude": ["node_modules", "dist"]      // Exclude unnecessary folders
}